  "scripts": {
    "build:contracts": "zx scripts/build.contracts.mjs",
    "build:schema": "zx scripts/build.schema.mjs",
    "deploy:contracts": "yarn run build:contracts && zx scripts/deploy.contracts.mjs",
    "start:app": "yarn workspace @workspace/app run start",
