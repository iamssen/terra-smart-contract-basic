    "@types/readable-stream": "^2.3.12",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2",
    "zx": "^4.2.0"
  },
  "peerDependencies": {
    "@terra-money/terra.js": "3.0.1",
    "readable-stream": "^3.6.0"
