{
  "name": "@workspace/app",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "app:dev": "vite",
    "app:dev:browser": "HTTPS=true PORT=3000 node scripts/start.mjs",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --colors --coverage",
    "storybook": "start-storybook -h localhost -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      [
        "yarn run app:dev",
        {
          "command": "yarn run app:dev:browser",
          "wait": "5000"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "../.eslintrc.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "dependencies": {
    "@rx-stream/pipe": "^0.7.1",
    "@rx-stream/react": "^0.7.1",
    "@terra-money/terra.js": "^3.0.1",
    "@terra-money/use-wallet": "^3.2.0",
    "@terra-money/wallet-provider": "^3.2.0",
    "big.js": "^6.1.1",
    "fix-hmr": "^1.0.2",
    "graphql": "^15.5.1",
    "numeral": "^2.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.18.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "resize-observer-polyfill": "^1.5.1",
    "rxjs": "^7.2.0",
    "styled-components": "^5.3.0",
    "vite-compatible-readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.1.7",
    "@ssen/jest-transform": "^3.0.0",
    "@types/big.js": "^6.1.2",
    "@types/numeral": "^2.0.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.16",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "multiplerun": "^2.0.1",
    "terra-web-extension": "^0.14.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.4",
    "vite-plugin-svgr": "^0.4.0",
    "vite-tsconfig-paths": "^3.3.13"
  }
}
